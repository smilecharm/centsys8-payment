<p id="notice"><%= notice %></p>

<h1>Profiles</h1>

<table>
  <thead>
    <tr>
      <th>UserID</th>
      <th>사용자명</th>
      <th>권한</th>
      <th>호칭</th>
      <th>역할</th>
      <th>급여조건</th>
      <th>Ref</th>
      <th colspan="3">관리</th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <tr>
        <td><%= profile.user_id %></td>
        <td><%= profile.username %></td>
        <td><%= profile.authority %></td>
        <td><%= profile.title %></td>
        <td><%= profile.role %></td>
        <td><%= profile.salarycondition %></td>
        <td><%= profile.ref %></td>
        <td><%= link_to 'Show', profile %></td>
        <td><%= link_to 'Edit', edit_profile_path(profile) %></td>
        <td><%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

