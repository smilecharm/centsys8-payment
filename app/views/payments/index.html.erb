<p id="notice"><%= notice %></p>
<h4><b>결제관리<b></h4>

<%= render 'search_schedule', schedule: @schedule %>

<table>
  <thead>
    <tr>
      <th>내담자명</th>
      <th>치료</th>
      <th>치료사(id)</th>
      <th>예약횟기</th>
      <th>이월횟기</th>
      <th>미수횟기</th>
      <th>결제횟기</th>
      <th>지원종류</th>
      <th>단가</th>
      <th>1회 자부담</th>
      <th>결제금액</th>
      <th>상세조회</th>
    </tr>
  </thead>
  <tbody>
  <% @schedules.each do |schedule| %>
    <tr>
      <td><%= schedule.client %></td>
      <td></td>
      <td><%= schedule.name %>(<%= schedule.id %>)</td>
      <td align="center"><%= schedule.reservation_count %></td>
    </tr>
  </tbody>
  <% end %>
</table>

<hr>
<%= render 'input', payment: @payment %>

<table>
  <thead>
    <tr>
      <th>내담자</th>
      <th>해당연월</th>
      <th>결제액</th>
      <th>예약회기</th>      
      <th>지불방법</th>
      <th>날짜</th>
      <th>메모</th>
      <th>참조</th>
      <th colspan="3">관리</th>
    </tr>
  </thead>

  <tbody>
    <% @payments.each do |payment| %>
      <tr>
        <td><%= payment.client %></td>
        <td><%= payment.yearmonth %></td>
        <td><%= payment.payamount %></td>
        <td align="center">4회기</td>
        <td><%= payment.method %></td>
        <td><%= payment.date %></td>
        <td><%= payment.memo %></td>
        <td><%= payment.ref %></td>
        <td><%= link_to '조회', payment %></td>
        <td><%= link_to '편집', edit_payment_path(payment) %></td>
        <td><%= link_to '삭제', payment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'New Payment', new_payment_path %>

