<p id="notice"><%= notice %></p>

<h3>치료계획</h3>
<%= render 'form', plan: @plan %>

<table>
  <thead>
    <tr>
      <th>Client</th>
      <th>Service</th>
      <th>Weekday</th>
      <th>Time</th>
      <th>Paykind</th>
      <th>Unitprice</th>
      <th>Support</th>
      <th>Selfprice</th>
      <th>Exp</th>
      <th>Ref</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @plans.each do |plan| %>
      <tr>
        <td><%= plan.client %></td>
        <td><%= plan.service %></td>
        <td><%= plan.weekday %></td>
        <td><%= plan.time.strftime("%H:%M") %></td>
        <td><%= plan.paykind %></td>
        <td><%= plan.unitprice %></td>
        <td><%= plan.support %></td>
        <td><%= plan.selfprice %></td>
        <td><%= plan.exp %></td>
        <td><%= plan.ref %></td>
        <td><%= link_to 'Show', plan %></td>
        <td><%= link_to 'Edit', edit_plan_path(plan) %></td>
        <td><%= link_to 'Destroy', plan, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Plan', new_plan_path %>
